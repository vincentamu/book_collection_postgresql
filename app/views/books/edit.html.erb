
<%= link_to('Back to List', books_path, :class => 'back-link') %> <br />

<div class ="books edit">
    <h2> Edit Book </h2>

    <%= form_with(model: @book, local: true) do |f| %>
        <% #url: tasks_path(@book), method: 'patch' %>

        <table summary="Book form fields">
            <tr>
                <th> Title </th>
                <td><%= f.text_field(:title) %></td>
            </tr>
            <tr>
                <th>Author</th>
                <td><%= f.text_field(:author) %></td>
            </tr>
            <tr>
                <th>Price</th>
                <td><%= f.number_field(:price, step: 0.01) %></td>
            </tr>
            <tr>
                <th>Published Date</th>
                <td><%= f.date_select(:published_date) %></td>
            </tr>
            

        </table>

        <div class="form-buttons">
            <%= f.submit("Edit Book")%>
        </div>
    <% end %>
</div>
