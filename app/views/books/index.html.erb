<h1>Books List</h1>

<div class = "books index">
    <h2> Books </h2>

    <body>
        <% if flash[:notice] %>
            <div class="notice"><%= flash[:notice] %></div>
        <% end %>
    </body>

    <%= link_to("Add Books", new_book_path, class: 'action new') %>

    <table class="listing" summary="Book List" style="width: 100%">
        <tr class = "header">
            <th>Title</th>
            <th>Author</th>
            <th>Price</th>
            <th>Published Date</th>
        </tr>
        <% @books.each do |book| %>
        <tr>
        
            <td style="text-align: center;"><%= book.title %></td>
            <td style="text-align: center;"><%= book.author %></td>
            <td style="text-align: center;"><%= number_to_currency(book.price) %></td>
            <td style="text-align: center;"><%= book.published_date %></td>
        

            <td class="actions">
                <%= link_to("Show", book_path(book), class: 'action show') %>
                <%= link_to("Edit", edit_book_path(book), class: 'action edit') %>
                <%= link_to("Delete", delete_book_path(book), class: 'action delete') %>
            </td>
        </tr>
        <% end %>
    </table>

</div>
